.father{
  position: relative;
  width: 100px;
  height: 100px;
  background-color: red;
}
.son{
  width: 50px;
  height: 50px;
  position: absolute;
  top:0;
  left: 0;
  bottom:0;
  right:0;
  margin:auto;
  background-color: green;
  text-align: center;
}
